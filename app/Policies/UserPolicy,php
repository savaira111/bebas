<?php

namespace App\Policies;

use App\Models\User;
use Illuminate\Auth\Access\HandlesAuthorization;

class UserPolicy
{
    use HandlesAuthorization;

    /**
     * SUPERADMIN BOLEH SEMUA
     */
    public function before(User $authUser, $ability)
    {
        if ($authUser->role === 'superadmin') {
            return true;
        }
    }

    /**
     * LIHAT LIST USER
     */
    public function viewAny(User $authUser)
    {
        return in_array($authUser->role, ['admin', 'superadmin']);
    }

    /**
     * LIHAT DETAIL USER
     */
    public function view(User $authUser, User $user)
    {
        // admin TIDAK BOLEH lihat superadmin
        if ($authUser->role === 'admin' && $user->role === 'superadmin') {
            return false;
        }

        return in_array($authUser->role, ['admin', 'superadmin']);
    }

    /**
     * CREATE USER
     */
    public function create(User $authUser)
    {
        return in_array($authUser->role, ['admin', 'superadmin']);
    }

    /**
     * UPDATE USER
     */
    public function update(User $authUser, User $user)
    {
        // admin boleh update dirinya sendiri
        if ($authUser->role === 'admin' && $authUser->id === $user->id) {
            return true;
        }

        // admin cuma boleh update user biasa
        if ($authUser->role === 'admin') {
            return $user->role === 'user';
        }

        return true; // superadmin
    }

    /**
     * DELETE (SOFT DELETE)
     */
    public function delete(User $authUser, User $user)
    {
        if ($authUser->role === 'admin') {
            return $user->role === 'user';
        }

        return true;
    }

    /**
     * RESTORE USER
     */
    public function restore(User $authUser, User $user)
    {
        if ($authUser->role === 'admin') {
            return $user->role === 'user';
        }

        return true;
    }

    /**
     * FORCE DELETE
     */
    public function forceDelete(User $authUser, User $user)
    {
        return $authUser->role === 'superadmin';
    }
}
